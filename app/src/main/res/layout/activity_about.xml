<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/aboutMovieImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/image_notfound"
                    />

                <TextView
                    android:id="@+id/aboutMovieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    />

                <TextView
                    android:id="@+id/aboutMovieVotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Votes"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    />

                <TextView
                    android:id="@+id/aboutMovieAdult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Adult"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />

                <TextView
                    android:id="@+id/aboutMovieDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Date"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />

                <TextView
                    android:id="@+id/aboutMovieOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Overview"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <ProgressBar
                        android:id="@+id/aboutProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />

                    <TextView
                        android:id="@+id/aboutNoConnection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/semconexao"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>